@page
@model Discway.Areas.League.Pages.CreateModel
@{
}

<h1>Create a new league</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <input asp-for="League.AdminId" type="hidden" />

    <div class="mb-3">
        <label asp-for="League.Course" class="form-label"></label>
        <input asp-for="League.Course" class="form-control" />
        <span asp-validation-for="League.Course" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="League.TotalPlayers" class="form-label"></label>
        <input asp-for="League.TotalPlayers" class="form-control" />
        <span asp-validation-for="League.TotalPlayers" class="text-danger"></span>
    </div>

    <input type="submit" class="btn btn-primary" />
</form>