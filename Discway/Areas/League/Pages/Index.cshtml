@page
@model Discway.Areas.League.Pages.IndexModel
@{
}

<table class="table">
    <thead>
        <tr>
            <th>Course</th>
            <th>Total Players</th>
            <th>Delete?</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var league in Model.Leagues)
        {
            <tr>
                <td>@league.Course</td>
                <td>@league.TotalPlayers</td>
                <td><a href="Delete?leagueId=@league.Id">Delete</a></td>
            </tr>
        }

    </tbody>
</table>